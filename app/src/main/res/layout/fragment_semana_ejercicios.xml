                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvLunes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lunes"
                    android:textAppearance="?attr/textAppearanceHeadline6" />

                <TextView
                    android:id="@+id/tvGrupoMuscularLunes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="-25dp"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="showPopup"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/btnAgregarGrupoMuscularLunes"
                    app:layout_constraintEnd_toStartOf="@+id/btnAgregarGrupoMuscularLunes" />

                <Button
                    android:id="@+id/btnAgregarGrupoMuscularLunes"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="end"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/purple"
                    android:text="Agregar grupo muscular"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    app:cornerRadius="20dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


